CXX=nvcc
CXXFLAGS= -O3 -Xcompiler="-fopenmp " -std=c++11 
CXXFLAGS += -D LAYOUT_SOA
CXXFLAGS += -D USE_LINEAR
CXXFLAGS += -gencode arch=compute_52,code=sm_52
CXXFLAGS += -x cu -D FCN_ATTRIBUTES="__host__ __device__"
CXXFLAGS += -rdc=true
CXXFLAGS += -D NDEBUG
CXXFLAGS += -use_fast_math

LDFLAGS = -Xcompiler="-fopenmp"
LDFLAGS += -arch=sm_52

INCLUDES= -I ../../install_gcc/include -I . -I ../src -I ../../src -I /usr/local/cuda/include
LD_LIBRARIES= -L ../../install_gcc/lib -L /usr/local/cuda/lib64 -lcuda
