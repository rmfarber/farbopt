# a 60 second quick test
MAX_RUN="-DMAX_RUNTIME=60"

# The location of the NLOPT directory
NLOPT_DIR='pwd'/../../install_gcc
APP=nlpca
GCC_FLAGS="-DUSE_ELLIOTT -O3 -fopenmp -std=c99 -w -msse "
INC=$HOME/install_cuda/include
LIB=$HOME/install_cuda/lib

gcc $GCC_FLAGS genData.c -o gen_$APP

gcc $GCC_FLAGS ../train.c $MAX_RUN -I . -I $INC  -L $LIB -lnlopt -lm -o train_$APP.omp

gcc $GCC_FLAGS ../pred.c -I . -lm -o pred_$APP

